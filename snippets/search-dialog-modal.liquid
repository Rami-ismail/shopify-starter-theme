{% comment %}
  Renders a search dialog modal.

  Usage:
  {% render 'search-dialog-modal' %}
{% endcomment %}

<dialog id="search-dialog" class="relative p-10">
  <form action="{{ routes.search_url }}" method="get" role="search" class="search search-modal__form">
    <input type="hidden" name="options[prefix]" value="last">
    <label class="sr-only" for="search-dialog-modal">{{ 'general.search.search' | t }}</label>
    <input
      class="form-input"
      id="search-dialog-modal"
      type="search"
      name="q"
      value="{{ search.terms | escape }}"
      placeholder="{{ 'general.search.search' | t }}"
    >
    <button>{{ 'general.search.search' | t }}</button>
  </form>

  <form method="dialog" class="absolute top-0 right-0">
    <button class="flex items-center justify-center w-10 h-10 button-unstyled">
      <span class="sr-only">{{ 'accessibility.close' | t }}</span>
      {%- render 'icon-close' -%}
    </button>
  </form>
</dialog>
